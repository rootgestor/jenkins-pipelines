pipeline {
  agent any
  stages {
    stage('Install frontend dependencies') {
      parallel {
        stage('Install frontend dependencies') {
          steps {
            yarn(command: 'yarn', workspaceSubdirectory: 'backoffice')
          }
        }

        stage('Install backend dependencies') {
          steps {
            yarn(command: 'yarn', workspaceSubdirectory: 'backoffice-backend')
          }
        }

      }
    }

    stage('build frontend') {
      steps {
        echo 'yarn build'
      }
    }

    stage('Publish') {
      steps {
        echo 'copy files to AWS'
      }
    }

    stage('Clean') {
      steps {
        echo 'Clear files'
      }
    }

  }
}