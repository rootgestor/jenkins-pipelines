pipeline {
  agent any
  stages {
    stage('Clone frontend') {
      steps {
        echo 'Clonando frontend repo'
        sh 'git clone git@github.com:rootgestor/frontend.git'
      }
    }

    stage('Install frontend dependencies') {
      steps {
        echo 'yarn'
        echo 'clone isolib submodule'
      }
    }

    stage('build frontend') {
      steps {
        echo 'yarn build'
      }
    }

    stage('Publish') {
      steps {
        echo 'copy files to AWS'
      }
    }

    stage('Clean') {
      steps {
        echo 'Clear files'
      }
    }

  }
}